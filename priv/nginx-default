  upstream phoenix_upstream {
    server 127.0.0.1:4001;
  }

  server {
    listen 80;
    listen [::]:80;
    server_name  vystoria.ga;
    return 301 https://$server_name$request_uri;
  }

  server {
    listen  443 ssl;
    server_name vystoria.ga;
    ssl_certificate /etc/letsencrypt/live/vystoria.ga/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/vystoria.ga/privkey.pem;

    location / {
      proxy_redirect off;
      proxy_pass http://phoenix_upstream;
    }
  }
