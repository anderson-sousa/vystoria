  upstream phoenix_upstream {
    server 127.0.0.1:4001;
  }

  server {
    listen 80;
    listen [::]:80;
    server_name  vystoria.ga;
    return 301 https://$server_name$request_uri;
  }

  server {
    listen  443 ssl;
    server_name vystoria.ga;
    set_real_ip_from 0.0.0.0/0;
    real_ip_header X-Real-IP;
    real_ip_recursive on;
    ssl_certificate /etc/letsencrypt/live/vystoria.ga/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/vystoria.ga/privkey.pem;

    location / {
      proxy_set_header  Host $host;
      proxy_set_header  X-Real-IP $remote_addr;
      proxy_set_header  X-Forwarded-Proto https;
      proxy_set_header  X-Forwarded-For $remote_addr;
      proxy_set_header  X-Forwarded-Host $remote_addr;
      proxy_redirect off;
      proxy_pass http://phoenix_upstream;
    }
  }
